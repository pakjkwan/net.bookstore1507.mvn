<!-- 	책을 신청하면 LEND 테이블에 정보가 들어가야함 -->
	<insert id="applyBook" parameterType="map">
		INSERT INTO
			LEND(
				Mem_No, Apply_Date, Pers_Book_No, Apply_Status_Code
			)
		VALUES(
			#{memNo}, now(), #{persBookNo}, '1'
		)	
	</insert>
	
