<!-- 	책의 소유자 정보 -->
	<select id="applyOwners" parameterType="map" resultType="applyOwners">
	
		select
			m.ID as id,
			m.Name as name,
			m.Addr1 as addr1,
			m.Pho_No as phoNo,
			m.Email as email,
			m.Photo_Url as photoUrl,
			pl.Reg_Code as regCode,
			pl.Pers_Book_No as persBookNo
		from
			MEMBER m, PERSONAL_LIBRARY pl
		where
			pl.ISBN=#{isbn}
		and
			pl.Mem_No=m.Mem_No
		and
			m.Mem_No!=#{memNo}
		and
			pl.Rental_Status='1'
		limit
			#{pageStartIndex}, #{pageSize}
			
	</select>
	
<!-- 	로그인 전 책의 위치를 알기 위한 쿼리 -->
	<select id="applyBookLoc" parameterType="map" resultType="applyOwners">
	
		select
			m.Addr1 as addr1,
			pl.Reg_Code as regCode
		from
			MEMBER m, PERSONAL_LIBRARY pl
		where
			pl.ISBN=#{isbn}
		and
			pl.Mem_No=m.Mem_No
		and
			pl.Rental_Status='1'
		limit
			#{pageStartIndex}, #{pageSize}
			
	</select>
	
<!-- 	책 신청 팝업에서 소유자 정보의 페이징 처리를 위한 소유자 수 -->
	<select id="size" parameterType="map" resultType="int" >
	
		select
			count(pl.Pers_Book_No)
		from
			MEMBER m, PERSONAL_LIBRARY pl
		where
			pl.ISBN=#{isbn}
		and
			pl.Mem_No=m.Mem_No
		and
			m.Mem_No!=#{memNo}
		and
			pl.Rental_Status='1'
			
	</select>
	
